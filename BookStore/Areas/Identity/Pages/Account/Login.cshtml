@page
@model LoginModel

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<div class="login-container">
    <div class="login-header">
        <h2>Welcome Back!</h2>
        <p>Login to continue</p>
    </div>
    <form id="account" method="post">
        <div class="form-group">
            <label asp-for="Input.Email" class="form-label"></label>
            <input asp-for="Input.Email" name="Email" class="form-control" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password" class="form-label"></label>
            <input asp-for="Input.Password" name="Password" class="form-control" autocomplete="current-password" aria-required="true" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
    </form>
    <div class="login-footer">
        <p>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a></p>
    </div>
</div>
    
                    
                   

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
