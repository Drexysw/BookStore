﻿@using BookStore.Core.Contracts
@model BookDetailsServiceModel
@inject IBookService bookService
@inject ISellerService sellerService

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Book Image">
        <div class="card-body text-center">
            <h4>@Model.Title</h4>
            <h6>Author: <b>@Model.Author</b></h6>
            <h6>
                Price Per Month:
                <b>@String.Format("{0:f2}", Model.Price) BGN</b>
            </h6>
            <br />
            <form class="input-group-sm" asp-controller="Book"
                  asp-area="Admin" asp-action="Approve" asp-route-houseId="@Model.Id" method="post">
                <input class="btn btn-success" type="submit" value="Approve" />
            </form>
        </div>
    </div>
</div>