@model IEnumerable<BookServiceModel>
@{
    var books = Model.ToList();
}
<div class="mb-5"></div>
    <div class="carousel-inner"> 
        @for (int i = 0; i < books.Count(); i++)
        {
            var boardgame = books[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:800px"
                     src="@books[i].ImageUrl" alt="@books[i].Title">

                    <div class="carousel-captio n d-none d-md-block">
                        <h5> 
                            <a class="btn btn-primary" asp-controller="Book" asp-action="Details"
                           asp-route-id="@books[i].Id"> @books[i].Title</a>
                        </h5> 
                    </div> 
            </div> 
        } 
    </div> 

<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
</button>
<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
</button>
 

