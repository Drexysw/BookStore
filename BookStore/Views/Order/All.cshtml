@model IEnumerable<OrderServiceModel>
@{
    ViewBag.Title = "Orders";
}
<br />

<div class="table-responsive">
    <table class="table table-bordered table-condensed table-striped table-hover sortable">
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="10">No Orders have been made.</td>
            </tr>
        }
        else
        {
            <thead>
                <tr class="danger">
                    <th data-defaultsign="_19"> Book</th>
                    <th data-defaultsign="AZ">Buyer</th>
                </tr>
            </thead>
            foreach (var order in Model)
            {
                <tr>
                    <td>@order.Book</td>
                    <td>@order.Buyer</td>
                </tr>
            }
        }
    </table>
</div> 